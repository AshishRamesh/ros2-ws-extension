{
  "name": "ros2-ws-extension",
  "displayName": "ROS 2 Developer Tools",
  "description": "A comprehensive VS Code extension for ROS 2 developers with workspace management, build automation, and code generation",
  "version": "0.2.0-alpha",
  "publisher": "AshishRamesh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AshishRamesh/ros2-ws-extension.git"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onView:ros2-sidebar",
    "workspaceContains:src"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ros2.initWorkspace",
        "title": "ROS 2: Initialize Workspace"
      },
      {
        "command": "ros2.build",
        "title": "ROS 2: Build Workspace"
      },
      {
        "command": "ros2.cleanBuild",
        "title": "ROS 2: Clean Build"
      },
      {
        "command": "ros2.openPanel",
        "title": "ROS 2: Open Panel"
      },
      {
        "command": "ros2.createPackage",
        "title": "ROS 2: Create Package"
      },
      {
        "command": "ros2.createNode",
        "title": "ROS 2: Create Node"
      },
      {
        "command": "ros2.generateGitignore",
        "title": "ROS 2: Generate .gitignore"
      },
      {
        "command": "ros2.playBag",
        "title": "ROS 2: Play Bag",
        "icon": "$(play)"
      },
      {
        "command": "ros2.runNode",
        "title": "ROS 2: Run Node",
        "icon": "$(play)"
      },
      {
        "command": "ros2.configureWorkflow",
        "title": "ROS 2: Configure Workflow",
        "icon": "$(plus)"
      },
      {
        "command": "ros2.runWorkflow",
        "title": "ROS 2: Run Workflow",
        "icon": "$(play-circle)"
      },
      {
        "command": "ros2.stopWorkflow",
        "title": "ROS 2: Stop Workflow",
        "icon": "$(stop)"
      },
      {
        "command": "ros2.setupEnvironment",
        "title": "ROS 2: Setup Environment"
      },
      {
        "command": "ros2.createRunConfiguration",
        "title": "ROS 2: Create Run Configuration"
      },
      {
        "command": "ros2.refreshTopics",
        "title": "Refresh Topics",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ros2-sidebar",
          "title": "ROS 2",
          "icon": "resources/ros2-icon.svg"
        }
      ]
    },
    "views": {
      "ros2-sidebar": [
        {
          "id": "ros2Workspace",
          "name": "Workspace",
          "icon": "$(folder)"
        },
        {
          "id": "ros2RunDebug",
          "name": "Run & Debug",
          "icon": "$(debug-alt)"
        },
        {
          "id": "ros2Topics",
          "name": "ROS 2 Topics",
          "icon": "$(list-flat)"
        },
        {
          "id": "ros2Bag",
          "name": "ROS 2 Bag",
          "icon": "$(briefcase)"
        },
        {
          "id": "ros2Workflows",
          "name": "ROS 2 Workflows",
          "icon": "$(list-ordered)"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "ros2.runWorkflow",
          "group": "navigation",
          "when": "resourceExtname == .launch.py || resourceExtname == .xml || resourceExtname == .yaml"
        }
      ],
      "view/title": [
        {
          "command": "ros2.refreshTopics",
          "when": "view == ros2Topics",
          "group": "navigation"
        },
        {
          "command": "ros2.configureWorkflow",
          "when": "view == ros2Workflows",
          "group": "navigation",
          "title": "New Workflow",
          "icon": "$(plus)"
        }
      ]
    },
    "debuggers": [
      {
        "type": "ros2",
        "label": "ROS 2",
        "configurationAttributes": {
          "launch": {
            "required": [],
            "properties": {
              "target": {
                "type": "string",
                "description": "Target type: 'launch-file' or 'node'",
                "enum": [
                  "launch-file",
                  "node"
                ],
                "default": "launch-file"
              },
              "launchFile": {
                "type": "string",
                "description": "Path to the launch file (required if target is 'launch-file')",
                "default": "${workspaceFolder}/src/package/launch/file.launch.py"
              },
              "package": {
                "type": "string",
                "description": "Package name (required if target is 'node')"
              },
              "executable": {
                "type": "string",
                "description": "Executable name (required if target is 'node')"
              },
              "sourceFile": {
                "type": "string",
                "description": "Path to setup file to source before running",
                "default": "${workspaceFolder}/install/setup.bash"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "ros2",
            "request": "launch",
            "name": "ROS 2: Launch File",
            "target": "launch-file",
            "launchFile": "${workspaceFolder}/src/package/launch/file.launch.py"
          },
          {
            "type": "ros2",
            "request": "launch",
            "name": "ROS 2: Run Node",
            "target": "node",
            "package": "my_package",
            "executable": "my_node"
          }
        ]
      }
    ],
    "configuration": {
      "title": "ROS 2 Toolkit",
      "properties": {
        "ros2Toolkit.workflowSteps": {
          "type": "object",
          "description": "Configuration for ROS 2 Workflows",
          "default": {
            "workflows": []
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}